# === BOT CONFIGURATION ===
BOT_TOKEN=your_telegram_bot_token_here

# === WEBHOOK CONFIGURATION ===
# Set to 1 for production webhook mode, 0 for polling
USE_WEBHOOK=0
WEBHOOK_BASE=https://your-domain.com
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_PATH=/webhook
WEBAPP_PORT=8080

# === PARTNER & AFFILIATE ===
AFFILIATE_TAG=skincare_bot
PARTNER_CODE=aff_skincare_bot
REDIRECT_BASE=https://your-redirect-domain.com
DEEPLINK_NETWORK=your_deeplink_network
USER_DISCOUNT=0.05
OWNER_COMMISSION=0.10

# === CATALOG & DATA ===
CATALOG_PATH=assets/fixed_catalog.yaml

# === DATABASE ===
DATABASE_URL=sqlite:///data/bot.db

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# === ANALYTICS & METRICS ===
ANALYTICS_ENABLED=1
AB_TESTING=1

# === DEVELOPMENT ===
DEBUG=0
DEVELOPMENT_MODE=0

# === EXTERNAL APIs ===
OPENAI_API_KEY=your_openai_api_key_here

# === DEPLOYMENT ===
# Railway CLI token (set in GitHub repository secrets)
RAILWAY_TOKEN=your_railway_token_here

# === ADMIN CONFIGURATION ===
ADMIN_IDS=123456789,987654321
OWNER_ID=123456789

# === LEGACY COMPATIBILITY ===
# These are kept for backwards compatibility
PORT=8080
METRICS_ENABLED=1
